<Window x:Class="Wpf.UserWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        mc:Ignorable="d"
        Title="UserWindow2" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="340*"/>
            <RowDefinition Height="79*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgpac" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" ColumnWidth="*">

        </DataGrid>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <TextBlock x:Name="timerHour" Text="00" TextAlignment="Center" FontSize="20"/>
            <TextBlock Text=":" FontSize="20" TextAlignment="Center"/>
            <TextBlock Text="10" x:Name="timerMinute" TextAlignment="Center" FontSize="20"/>
            <TextBlock Text=":" FontSize="20" TextAlignment="Center"/>
            <TextBlock Text="00" x:Name="timerSecond" TextAlignment="Center" FontSize="20"/>
        </StackPanel>
    </Grid>
</Window>
